# Window colors
#                       border             background         text                 indicator
client.focused          $bg-color          $bg-color          $text-color          #cccccc
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #cccccc
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #cccccc
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          #cccccc

bar {
    tray_output primary
    status_command i3blocks
    colors {
        background $bg-color
        separator $bar_seperator
        #                  border             background         text
        focused_workspace  $bg-color          $bg-color          $text-color
        inactive_workspace $bg-color          $bg-color          $inactive-bright-text-color
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }
}

